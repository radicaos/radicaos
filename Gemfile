source 'https://rubygems.org'

ruby '2.0.0'

gem 'rails', '3.2.13'

group :assets do
  gem 'sass-rails'
  gem 'coffee-rails'
  gem 'therubyracer'
  gem 'less-rails'

  gem 'uglifier'
end

gem 'jquery-rails'
gem 'rails-backbone'
gem 'twitter-bootstrap-rails'

gem 'unicorn'
gem 'mongoid'
gem 'responders'
gem 'geocoder'
gem 'recaptcha', require: 'recaptcha/rails'

group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
end

group :test do
  gem 'capybara'
  gem 'database_cleaner'
  gem 'mongoid-rspec'
  gem 'cucumber-rails' 
end