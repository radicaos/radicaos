group :assets do
  gem 'sass-rails',   '~> 3.2.3'
  gem 'coffee-rails', '~> 3.2.1'

  gem 'uglifier', '>= 1.0.3'
end

gem 'jquery-rails'

gem 'unicorn'
gem 'mongoid'
gem 'responders'
gem 'simple_form'
gem 'geocoder'
gem 'recaptcha', :require => 'recaptcha/rails'

group :development, :test do
  gem 'rspec-rails'
  gem 'factory_girl_rails'
end

group :test do
  gem 'capybara'
  gem 'database_cleaner'
  gem 'mongoid-rspec'
  gem 'cucumber-rails' 
end